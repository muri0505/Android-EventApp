<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/agendaStartTime"
            style="@style/eventBody"
            android:text="@string/agendaStartTime" />

        <TextView
            android:id="@+id/agendaEndTimeTime"
            style="@style/eventBody"
            android:text="@string/agendaEndTime" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/time">

        <TextView
            android:id="@+id/agendaName"
            android:text="@string/agendaName"
            style="@style/eventDate"/>

        <TextView
            android:id="@+id/agendaType"
            android:text="@string/agendaType"
            style="@style/eventDate"/>

        <TextView
            android:id="@+id/agendaDes"
            android:text="@string/agendaDes"
            style="@style/eventDate"/>

    </LinearLayout>
</RelativeLayout>