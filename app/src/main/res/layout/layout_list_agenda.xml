<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="4">

    <LinearLayout
        android:id="@+id/time"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/agendaStartTime"
            android:text="@string/agendaStartTime"
            android:layout_marginTop="27dp"
            style="@style/agendaTime"/>

        <TextView
            android:id="@+id/agendaEndTime"
            android:text="@string/agendaEndTime"
            style="@style/agendaTime"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/agendaName"
            android:text="@string/agendaName"
            style="@style/agendaTitle"/>

        <TextView
            android:id="@+id/agendaType"
            android:text="@string/agendaType"
            style="@style/agendaBody"/>

        <TextView
            android:id="@+id/agendaDes"
            android:text="@string/agendaDes"
            style="@style/agendaBody"/>

    </LinearLayout>
</LinearLayout>