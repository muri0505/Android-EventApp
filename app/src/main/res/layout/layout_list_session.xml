<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="4">

    <LinearLayout
        android:id="@+id/time"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sessionStartTime"
            android:text="@string/sessionStartTime"
            android:layout_marginTop="27dp"
            style="@style/agendaTime"/>

        <TextView
            android:id="@+id/sessionEndTime"
            android:text="@string/sessionEndTime"
            style="@style/agendaTime"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sessionName"
            android:text="@string/sessionName"
            style="@style/agendaTitle"/>

        <TextView
            android:id="@+id/sessionLocation"
            android:text="@string/sessionLocation"
            style="@style/agendaBody"/>

        <TextView
            android:id="@+id/sessionPresenter"
            android:text="@string/sessionPresenter"
            style="@style/agendaBody"/>

        <TextView
            android:id="@+id/sessionAuthor"
            android:text="@string/sessionAuthor"
            style="@style/agendaBody"/>
    </LinearLayout>
</LinearLayout>